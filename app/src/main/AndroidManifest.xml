<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.job4j.exam">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ExamListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:noHistory="true"/>
        <activity android:name=".ResultActivator"/>
            <activity android:name=".DateTimeActivator"
                android:screenOrientation="nosensor"/>
        <activity android:name=".ExamAddActivity" />
        <activity android:name=".InnerExamsListActivity" />
        <activity android:name=".ExamDescriptionActivity" />
        <activity android:name=".AddDescriptionFormActivity"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar.MinWidth"/>
        <activity android:name=".AnswerDetailsActivity"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar.MinWidth"/>
        <activity android:name=".ExamUpdateActivity" />
    </application>

</manifest>